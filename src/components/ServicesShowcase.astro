---
import { getService, type ServiceData } from '../data/services-multilingual';
import { getAllCases, type CaseStudyData } from '../data/cases-multilingual';
import ServiceScrollCards from './ServiceScrollCards.jsx';

import takeLogo from '../assets/logos/take.png';
import icigaLogo from '../assets/logos/iciga.svg';
import shearnLogo from '../assets/logos/shearn.png';
import testsoposicionesLogo from '../assets/logos/testsoposiciones.svg';
import irLogo from '../assets/logos/IR.png';
import avteLogo from '../assets/logos/avte.png';
import igapeLogo from '../assets/logos/igape.png';

interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;
const translations = await import(`../../public/locales/${lang}.json`);
const t = (k: string) => translations.default[k] || k;

const serviceIds = ['desarrollo-a-medida', 'consultoria-transformacion', 'innovacion-subvencionada'];
const services = serviceIds.map(id => getService(id, lang)).filter(Boolean) as ServiceData[];
const allCases = getAllCases(lang);

const casesByService: Record<string, CaseStudyData[]> = {};
for (const id of serviceIds) {
  casesByService[id] = allCases.filter(c => c.services.includes(id));
}

const caseLogos: Record<string, string> = {
  take: takeLogo.src,
  iciga: icigaLogo.src,
  shearn: shearnLogo.src,
  gamificacion: testsoposicionesLogo.src,
  grille: avteLogo.src,
  consultoria: irLogo.src,
};

const partnerLogos = [
  { src: avteLogo.src, alt: 'AVTE' },
  { src: icigaLogo.src, alt: 'ICIGA' },
  { src: igapeLogo.src, alt: 'IGAPE' },
  { src: irLogo.src, alt: 'IR' },
  { src: shearnLogo.src, alt: 'Shearn' },
  { src: takeLogo.src, alt: 'TAKE' },
  { src: testsoposicionesLogo.src, alt: 'TestOposiciones' },
];
---

<section class="bg-white text-black">
  <div class="w-full max-w-7xl mx-auto px-6 md:px-12">
    <h2 class="section-title" set:html={t('showcase.title')} />
  </div>

  <div class="w-full max-w-7xl mx-auto px-6 md:px-12">
    <ServiceScrollCards
      client:visible
      services={services}
      casesByService={casesByService}
      caseLogos={caseLogos}
      lang={lang}
      ctaBadge={t('showcase.cta.badge')}
      ctaTitle={t('showcase.cta.title')}
      ctaSubtitle={t('showcase.cta.subtitle')}
      ctaPills={[t('showcase.cta.pill1'), t('showcase.cta.pill2'), t('showcase.cta.pill3')]}
      ctaTrust={t('showcase.cta.trust')}
      ctaButton={t('showcase.cta.button')}
      ctaSecondary={t('showcase.cta.secondary')}
      partnerLogos={partnerLogos}
    />
  </div>
</section>

<style is:global>
  /* ── ScrollStack base ── */
  .scroll-stack-container {
    position: relative;
    width: 100%;
  }

  .scroll-stack-card {
    transform-origin: top center;
    width: 100%;
    box-sizing: border-box;
  }

  /* ── Service Card ── */
  .ssc-card {
    width: 100%;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 4px 32px rgba(0, 0, 0, 0.06);
    overflow: hidden;
  }

  .ssc-body {
    display: flex;
    min-height: 340px;
  }

  /* ── Left: Service info ── */
  .ssc-info {
    flex: 1;
    padding: 3rem 3.5rem;
    display: flex;
    flex-direction: column;
  }

  .ssc-info-top {
    margin-bottom: 1.75rem;
  }

  .ssc-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #000;
    line-height: 1.2;
    margin-bottom: 0.5rem;
  }

  .ssc-tagline {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.5;
  }

  .ssc-description {
    font-size: 1.05rem;
    color: #555;
    line-height: 1.7;
    margin-bottom: auto;
  }

  /* ── Right: Proof panel ── */
  .ssc-proof {
    width: 400px;
    flex-shrink: 0;
    background: #0a0a0a;
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
  }

  .ssc-proof-label {
    display: block;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: rgba(255, 255, 255, 0.55);
    margin-bottom: 1.25rem;
  }

  /* Case items */
  .ssc-proof-list {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    flex: 1;
  }

  .ssc-proof-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 0.85rem;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .ssc-proof-item:hover {
    transform: scale(1.05);
  }

  .ssc-proof-logo {
    height: 1.75rem;
    width: 86px;
    object-fit: contain;
    flex-shrink: 0;
    filter: brightness(0) invert(1);
    opacity: 0.85;
    transition: opacity 0.3s ease;
  }

  .ssc-proof-item:hover .ssc-proof-logo {
    opacity: 1;
    width: 86px;
  }

  .ssc-proof-headline {
    font-size: 0.9rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .ssc-proof-item:hover .ssc-proof-headline {
    color: rgba(255, 255, 255, 0.9);
  }

  .ssc-proof-more {
    margin-top: auto;
    color: rgba(255, 255, 255, 0.3);
    font-size: 0.85rem;
    font-weight: 600;
    gap: 0.5rem;
    transition: color 0.2s ease;
  }

  .ssc-proof-more span {
    color: inherit;
  }

  .ssc-proof-more:hover {
    color: rgba(255, 255, 255, 0.7);
    background: transparent;
  }

  /* Promo CTA in proof panel */
  .ssc-proof-promo {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex: 1;
    padding: 1rem 0;
    min-height: 200px;
  }

  .ssc-proof-promo-headline {
    font-weight: 700;
    color: #fff;
    line-height: 1.35;
    letter-spacing: 0.02em;
  }

  /* Stats in proof panel */
  .ssc-proof-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 1.5rem 1rem;
    flex: 1;
    align-content: center;
  }

  .ssc-proof-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 0.25rem;
  }

  .ssc-proof-stat-value {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: clamp(2rem, 3vw, 2.75rem);
    font-weight: 800;
    color: #fff;
    line-height: 1.1;
  }

  .ssc-proof-stat-label {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.4);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
    min-height: 2.4em;
    line-height: 1.2;
    display: flex;
    align-items: flex-start;
  }

  /* ── CTA Card ── */
  .ssc-cta {
    background: #000;
    color: #fff;
    padding: 5rem 3rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0;
    min-height: calc(100vh - 90px);
    width: 100vw;
    margin-left: 50%;
    transform: translateX(-50%);
  }

  /* Badge — urgency at the very top */
  .ssc-cta-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #000;
    background: #fff;
    padding: 0.45rem 1.25rem;
    border-radius: 0;
    margin-bottom: 2.5rem;
  }

  .ssc-cta-title {
    font-size: clamp(2rem, 4.5vw, 3.25rem);
    font-weight: 800;
    line-height: 1.15;
    margin-bottom: 1.25rem;
    max-width: 680px;
    letter-spacing: -0.02em;
  }

  .ssc-cta-subtitle {
    font-size: 1.15rem;
    color: rgba(255, 255, 255, 0.55);
    max-width: 520px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* Risk-removal pills */
  .ssc-cta-pills {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 2rem;
  }

  .ssc-cta-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.78rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.15);
    padding: 0.5rem 1rem;
    border-radius: 0;
    letter-spacing: 0.01em;
  }

  .ssc-cta-pill svg {
    color: rgba(255, 255, 255, 0.5);
    flex-shrink: 0;
  }

  /* Primary CTA button — oversized, impossible to miss */
  .ssc-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 2.75rem;
    padding: 1.1rem 3rem;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: #000;
    background: #fff;
    border: none;
    text-decoration: none;
    transition: all 0.25s ease;
    cursor: pointer;
  }

  .ssc-cta-button svg {
    transition: transform 0.25s ease;
  }

  .ssc-cta-button:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 8px 40px rgba(255, 255, 255, 0.15);
  }

  .ssc-cta-button:hover svg {
    transform: translateX(4px);
  }

  /* Secondary path */
  .ssc-cta-alt {
    margin-top: 1.25rem;
    font-size: 0.82rem;
    color: rgba(255, 255, 255, 0.3);
  }

  .ssc-cta-alt a {
    color: rgba(255, 255, 255, 0.55);
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-color: rgba(255, 255, 255, 0.2);
    transition: color 0.2s ease;
  }

  .ssc-cta-alt a:hover {
    color: #fff;
  }

  /* ── CTA Trust / Logo Carousel ── */
  @keyframes ssc-cta-slide {
    from { transform: translateX(0); }
    to { transform: translateX(-100%); }
  }

  .ssc-cta-trust {
    padding-top: 3rem;
    width: 100%;
    max-width: 700px;
  }

  .ssc-cta-trust-label {
    display: block;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: rgba(255, 255, 255, 0.25);
    margin-bottom: 1rem;
  }

  .ssc-cta-logos {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    padding: 12px 0;
  }

  .ssc-cta-logos::before,
  .ssc-cta-logos::after {
    content: '';
    position: absolute;
    top: 0;
    width: 120px;
    height: 100%;
    z-index: 2;
    pointer-events: none;
  }

  .ssc-cta-logos::before {
    left: 0;
    background: linear-gradient(to left, rgba(0,0,0,0), #000);
  }

  .ssc-cta-logos::after {
    right: 0;
    background: linear-gradient(to right, rgba(0,0,0,0), #000);
  }

  .ssc-cta-logos-track {
    display: inline-flex;
    animation: ssc-cta-slide 40s linear infinite;
  }

  .ssc-cta-logo-item {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 50px;
    width: 140px;
    margin: 0 28px;
    padding: 10px;
  }

  .ssc-cta-logo-item img {
    max-height: 38px;
    max-width: 120px;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: brightness(0) invert(1);
    opacity: 0.4;
    transition: opacity 0.3s ease;
  }

  .ssc-cta-logo-item:hover img {
    opacity: 0.7;
  }

  /* ── Responsive ── */
  @media (max-width: 768px) {
    .ssc-body {
      flex-direction: column;
      min-height: auto;
    }

    .ssc-info {
      padding: 1.5rem;
    }

    .ssc-title {
      font-size: 1.35rem;
    }

    .ssc-description {
      display: none;
    }

    .ssc-proof {
      width: 100%;
      padding: 1.5rem;
    }

    .ssc-proof-stats {
      grid-template-columns: 1fr 1fr;
    }

    .ssc-cta {
      padding: 2.5rem 1.25rem 1.75rem;
      min-height: calc(100vh - 60px);
      min-height: calc(100dvh - 60px);
      width: 100vw;
      margin-left: 50%;
      transform: translateX(-50%);
    }

    .ssc-cta-badge {
      margin-bottom: 1.5rem;
      font-size: 0.6rem;
      padding: 0.4rem 1rem;
    }

    .ssc-cta-title {
      font-size: 2rem !important;
      margin-bottom: 0.75rem;
    }

    .ssc-cta-subtitle {
      font-size: 0.92rem;
      line-height: 1.6;
      padding: 0 0.5rem;
    }

    .ssc-cta-pills {
      gap: 0.4rem;
      margin-top: 1.25rem;
    }

    .ssc-cta-pill {
      font-size: 0.68rem;
      padding: 0.4rem 0.75rem;
      gap: 0.3rem;
    }

    .ssc-cta-pill svg {
      width: 12px;
      height: 12px;
    }

    .ssc-cta-button {
      margin-top: 1.75rem;
      padding: 1rem 2rem;
      font-size: 0.85rem;
      width: 100%;
      justify-content: center;
    }

    .ssc-cta-alt {
      font-size: 0.72rem;
      margin-top: 1rem;
      padding: 0 1rem;
      line-height: 1.5;
    }

    .ssc-cta-trust {
      padding-top: 3rem;
      padding-bottom: 1.5rem;
    }

    .ssc-cta-trust-label {
      font-size: 0.6rem;
      margin-bottom: 0.6rem;
    }

    .ssc-cta-logos {
      padding: 8px 0;
    }

    .ssc-cta-logos::before,
    .ssc-cta-logos::after {
      width: 40px;
    }

    .ssc-cta-logo-item {
      height: 36px;
      width: 100px;
      margin: 0 14px;
      padding: 6px;
    }

    .ssc-cta-logo-item img {
      max-height: 26px;
      max-width: 80px;
    }
  }
</style>
