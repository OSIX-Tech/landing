      <!-- Columna derecha: Formulario -->
      <div class="bg-black p-6 sm:p-8 contact-form-col animate-on-scroll">
        <form id="static-contact-form" class="space-y-4">
          <div>
            <label for="name" class="block text-white mb-2">{t('contact.form.name')}</label>
            <input
              type="text"
              id="name"
              name="user_name"
              class="w-full px-3 py-2 bg-white text- focus:outline-none focus:ring-2 focus:ring-white text-sm sm:text-base"
              required
              minlength="2"
              title={t('contact.form.name.title')}
            />
          </div>
          
          <div>
            <label for="email" class="block text-white mb-2">{t('contact.form.email')}</label><label for="email" class="block text-white mb-2"></label>
            <input
              type="email"
              id="email"
              name="user_email"
              class="w-full px-3 py-2 bg-white text-black focus:outline-none focus:ring-2 focus:ring-white text-sm sm:text-base"
              required
              title={t('contact.form.email.title')}
            />
          </div>

          <div>
            <label for="service" class="block text-white mb-2">{t('contact.form.service')}</label>
            <select
              id="service"
              name="service"
              class="w-full px-3 py-2 bg-white text-black focus:outline-none focus:ring-2 focus:ring-white text-sm sm:text-base"
              required
            >
              <option value="" disabled selected>{t('contact.form.service.placeholder')}</option>
              <optgroup label={t('contact.form.service.products')}>
                <option value="APEC">APEC</option>
                <option value="Nessie">Nessie</option>
                <option value="Moura">Moura</option>
                <option value="ACTA">ACTA</option>
                <option value="IRIS">IRIS</option>
                <option value="BOND">BOND</option>
              </optgroup>
              <optgroup label={t('contact.form.service.services')}>
                <option value="custom">{t('contact.form.service.custom')}</option>
                <option value="kted">{t('contact.form.service.kted')}</option>
                <option value="consultoria-transformacion">{t('contact.form.service.transformacion')}</option>
                <option value="innovacion-subvencionada">{t('contact.form.service.innovacion')}</option>
              </optgroup>
              <option value="other">{t('contact.form.service.other')}</option>
            </select>
          </div>

          <div>
            <label for="phone" class="block text-white mb-2">{t('contact.form.phone')} <span class="text-gray-400 text-xs">({t('contact.form.optional')})</span></label>
            <input
              type="tel"
              id="phone"
              name="user_phone"
              class="w-full px-3 py-2 bg-white text-black focus:outline-none focus:ring-2 focus:ring-white text-sm sm:text-base"
            />
          </div>

          <div>
            <label for="message" class="block text-white mb-2">{t('contact.form.message')}</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="no-resize w-full px-3 sm:px-4 py-2 sm:py-3 bg-white text-black focus:outline-none focus:ring-2 focus:ring-white text-sm sm:text-base"
              required
              minlength="10"
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="btn-secondary w-full mt-4 justify-center text-center"
          >
          {t('contact.form.button')}
          </button>
        </form>

        <!-- (Mobile Privacy Policy button moved outside the card) -->
      </div>
    </div>
  </div>

<style>
  /* Initial states */
  .contact-info-col, .contact-form-col {
    opacity: 0;
    transform: translateY(30px);
  }

  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animation classes */
  .contact-info-col.animate-in {
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .contact-form-col.animate-in {
    animation: fadeInUp 0.8s ease-out forwards;
    animation-delay: 0.25s;
  }

</style>

<script>
  import { initEmailJS, sendEmail } from '../utils/emailjs';

  // Function to initialize contact section
  function initializeContactSection() {
    // EmailJS Initialization
    initEmailJS();
    
    const staticContactForm = document.getElementById('static-contact-form') as HTMLFormElement | null;
    
    if (staticContactForm) {
      staticContactForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const submitButton = staticContactForm.querySelector('button[type="submit"]') as HTMLButtonElement | null;
        if (!submitButton) return;
        
        const originalButtonText = submitButton.textContent || 'Send Message';
        submitButton.textContent = 'Sending...';
        submitButton.disabled = true;
        
        const formData = new FormData(staticContactForm);
        
        const date = new Date().toLocaleString('en-US', {
          day: '2-digit',
          month: 'long',
          year: 'numeric',
          hour: '2-digit',
          minute: '2-digit',
          hour12: false,
        });

        const templateParams = {
          user_name:  formData.get('user_name'),
          user_email: formData.get('user_email'),
          service: formData.get('service'),
          user_phone: formData.get('user_phone'),
          message:    formData.get('message'),
          date,
        };
        
        sendEmail(templateParams)
          .then(function(response) {
            console.log('SUCCESS!', response.status, response.text);
            submitButton.textContent = 'Message sent!';
            staticContactForm.reset();
            setTimeout(() => {
              submitButton.textContent = originalButtonText;
              submitButton.disabled = false;
            }, 3000);
          })
          .catch(function(error) {
            console.log('FAILED...', error);
            submitButton.textContent = 'Error sending message';
            setTimeout(() => {
              submitButton.textContent = originalButtonText;
              submitButton.disabled = false;
            }, 3000);
          });
      });
    }


    // Intersection Observer for animations
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.2
    };

    const animationObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
        } else {
          entry.target.classList.remove('animate-in');
        }
      });
    }, observerOptions);

    // Observe contact columns
    const contactInfoCol = document.querySelector('.contact-info-col');
    const contactFormCol = document.querySelector('.contact-form-col');
    
    if (contactInfoCol) animationObserver.observe(contactInfoCol);
    if (contactFormCol) animationObserver.observe(contactFormCol);
  }

  // Initialize on DOMContentLoaded but wait for loading to complete
  document.addEventListener('DOMContentLoaded', () => {
    if ((window as any).isLoadingComplete) {
      initializeContactSection();
    } else {
      window.addEventListener('loadingComplete', initializeContactSection);
    }
  });
</script>

