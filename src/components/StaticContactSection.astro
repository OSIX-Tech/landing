              <a href="tel:+34648935068" class="font-normal hover:underline">{t('contact.phone.value')}</a>
            </div>
          </div>
        </div>

        <!-- Privacy Policy row – icon + title are clickable; description is plain text -->
        <div class="hidden md:flex items-start gap-4 mt-auto">
          <!-- Clickable part -->
          <a
            href={`/${lang}/privacy`}
            class="group flex items-center gap-4 py-8
