---
interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;
const translations = await import(`../../../public/locales/${lang}.json`);
const t = (k: string) => translations.default[k] || k;
---

<section class="py-12 bg-white border-t border-gray-100">
  <div class="max-w-6xl mx-auto px-6 md:px-12">
    <p class="text-center text-sm text-gray-400 mb-8">
      {t('kted.footer.funded')}
    </p>

    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12">
      <!-- Red.es -->
      <a
        href="https://www.red.es"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/red.png"
          alt="Red.es"
          class="h-12 md:h-14 w-auto"
        />
      </a>

      <div class="hidden md:block w-px h-10 bg-gray-200"></div>

      <!-- NextGenerationEU -->
      <a
        href="https://next-generation-eu.europa.eu"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/logo-eu--es.svg"
          alt="NextGenerationEU"
          class="h-12 md:h-14 w-auto"
        />
      </a>

      <div class="hidden md:block w-px h-10 bg-gray-200"></div>

      <!-- Plan de Recuperación -->
      <a
        href="https://planderecuperacion.gob.es"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/logo_color_R.png"
          alt="Plan de Recuperación"
          class="h-12 md:h-14 w-auto"
        />
      </a>
    </div>

    <!-- Link to official docs -->
    <div class="text-center mt-10">
      <a
        href="https://www.red.es/es/iniciativas/kit-digital"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-black transition-colors"
      >
        <span>{t('kted.footer.moreInfo')}</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</section>
