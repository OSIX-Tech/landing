---
import type { Lang } from '../../utils/languages';

interface Props {
  lang?: Lang;
}

const { lang = 'es' } = Astro.props;
---

<header class="fixed top-0 left-0 w-full h-[80px] bg-white z-50 px-6 md:px-12 flex items-center border-b border-gray-100">
  <nav class="flex items-center justify-between w-full">
    <!-- Logo -->
    <a href={`/${lang}`} class="flex items-center">
      <img src="/full_logo.png" alt="OSIX Tech" class="w-[120px] md:w-[160px]">
    </a>

    <!-- Navigation -->
    <div class="flex items-center gap-4 md:gap-6">
      <a
        href={`/${lang}`}
        class="text-sm font-medium text-gray-600 hover:text-black transition-colors"
      >
        {({ es: 'Inicio', gl: 'Inicio', en: 'Home' }[lang])}
      </a>

      <a
        href="#contact"
        class="bg-black text-white px-5 py-2.5 text-sm font-medium border-2 border-black hover:bg-white hover:text-black transition-colors"
      >
        {({ es: 'Contacto', gl: 'Contacto', en: 'Contact' }[lang])}
      </a>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-[80px]"></div>
