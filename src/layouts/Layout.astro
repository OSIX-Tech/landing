---
import SpeedInsights from '@vercel/speed-insights/astro';
import Header from '../components/Header.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  lang: 'en' | 'es';
  keywords?: string;
  pageType?: 'website' | 'article' | 'product';
  noindex?: boolean;
  jsonLd?: any;
  hideHeader?: boolean;
}

const {
  lang,
  image = '/og-image.png',
  canonical,
  pageType = 'website',
  noindex = false,
  jsonLd,
  hideHeader = false
} = Astro.props;

const title = Astro.props.title ?? (lang === 'es'
  ? 'OSIX Tech - Automatización Impulsada por IA | Desarrollo de Software'
  : 'OSIX Tech - AI-Powered Automation | Software Development');

const description = Astro.props.description ?? (lang === 'es'
  ? 'Construimos software de automatización con IA y tecnologías modernas. OSIX Tech ofrece soluciones digitales personalizadas para necesidades empresariales reales.'
  : 'We build automation-driven software using AI and modern technologies. OSIX Tech delivers custom digital solutions for real-world business needs.');

const keywords = Astro.props.keywords ?? (lang === 'es'
  ? 'desarrollo software, desarrollo web, desarrollo móvil, inteligencia artificial, automatización, transformación digital, OSIX Tech, tecnología, innovación, inteligencia artificial Galicia, desarrollo software Santiago de Compostela, digitalización empresas Galicia, automatización empresas España, software a medida Galicia'
  : 'software development, web development, mobile development, artificial intelligence, automation, digital transformation, OSIX Tech, technology, innovation, AI software Galicia Spain, custom software Santiago de Compostela, business digitalization Galicia, automation solutions Spain');

// Generate proper canonical URL
const baseUrl = 'https://osix.tech';
let currentPath = Astro.url.pathname;

// For root page, point to the appropriate language version
if (currentPath === '/') {
  currentPath = `/${lang}/`;
}

// Ensure trailing slash for consistency
if (!currentPath.endsWith('/') && !currentPath.includes('.')) {
  currentPath = `${currentPath}/`;
}

const currentCanonical = canonical || `${baseUrl}${currentPath}`;

// Generate alternate language URL
const alternateLang = lang === 'en' ? 'es' : 'en';
const alternatePath = currentPath.replace(`/${lang}/`, `/${alternateLang}/`);
const alternateUrl = `${baseUrl}${alternatePath}`;

// Full image URL for Open Graph
const fullImageUrl = image.startsWith('http') ? image : `${baseUrl}${image}`;	
---

<!DOCTYPE html>

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0, user-scalable=yes" />

    <!-- Font loading: preconnect + non-blocking stylesheet -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200..800&display=swap" />

    <meta name="theme-color" content="transparent" />
    <meta name="mobile-web-app-capable" content="yes" />

    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Language and alternates -->
    <link rel="alternate" hreflang={alternateLang} href={alternateUrl} />
    <link rel="alternate" hreflang="x-default" href="https://osix.tech/en/" />
    <link rel="alternate" hreflang={lang} href={currentCanonical} />

    <!-- Favicon base -->

    <link rel="icon" href="/favicon.ico" sizes="any" type="image/x-icon">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

    <!-- SEO Meta Tags -->
    <meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"} />
    <meta name="author" content="OSIX Tech" />
    <meta name="keywords" content={keywords} />
    <meta name="copyright" content="OSIX Tech" />
    <meta name="language" content={lang} />
    <meta name="rating" content="general" />
    <meta name="distribution" content="global" />

    <!-- Canonical URL -->
    <link rel="canonical" href={currentCanonical} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={pageType} />
    <meta property="og:url" content={currentCanonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="OSIX Tech Logo" />
    <meta property="og:site_name" content="OSIX Tech" />
    <meta property="og:locale" content={lang === 'es' ? 'es_ES' : 'en_US'} />
    <meta property="og:locale:alternate" content={lang === 'es' ? 'en_US' : 'es_ES'} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentCanonical} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={fullImageUrl} />
    <meta property="twitter:site" content="@osixtech" />
    <meta property="twitter:creator" content="@osixtech" />
    
    <!-- Additional SEO Tags -->
    <meta name="apple-mobile-web-app-title" content="OSIX Tech" />
    <meta name="application-name" content="OSIX Tech" />
    <meta name="msapplication-TileColor" content="#000000" />
    
    <!-- Structured Data -->
    {jsonLd && (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}

    <!-- Google Analytics 4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-RMEFVS4V09"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-RMEFVS4V09');
    </script>

  </head>
  <body>
    {!hideHeader && <Header lang={lang} />}
    <script is:inline>
      (function() {
        var h = document.getElementById('main-header');
        if (h) document.documentElement.style.setProperty('--header-h', h.offsetHeight + 'px');
        window.addEventListener('resize', function() {
          if (h) document.documentElement.style.setProperty('--header-h', h.offsetHeight + 'px');
        });
      })();
    </script>
    <main style="background-color: transparent;">
      <slot />
    </main>
