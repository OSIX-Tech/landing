---
export const prerender = true;

// SEO metadata for the redirect page
const title = 'OSIX Tech - AI-Powered Software Development & Automation';
const description = 'OSIX Tech: Leaders in custom software development, AI automation, and digital transformation. We create innovative solutions for modern businesses.';
const canonicalUrl = 'https://osix.tech/en/';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- Canonical URL pointing to default language -->
  <link rel="canonical" href={canonicalUrl} />
  
  <!-- Language alternates -->
  <link rel="alternate" hreflang="en" href="https://osix.tech/en/" />
  <link rel="alternate" hreflang="es" href="https://osix.tech/es/" />
  <link rel="alternate" hreflang="x-default" href="https://osix.tech/en/" />
  
  <!-- SEO Meta Tags -->
  <meta name="robots" content="index, follow" />
  <meta http-equiv="refresh" content="0; url=/en/" />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://osix.tech/" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content="https://osix.tech/og-image.png" />
  <meta property="og:site_name" content="OSIX Tech" />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content="https://osix.tech/" />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content="https://osix.tech/og-image.png" />
  
  <!-- Favicon -->
  <link rel="icon" href="/favicon.ico" sizes="any" type="image/x-icon">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <script>
    // Language detection and redirect
    (function() {
      const supported = ['en', 'es'];
      const userLang = navigator.language.split('-')[0] || 'en';
      const lang = supported.includes(userLang) ? userLang : 'en';
      window.location.replace(`/${lang}/`);
    })();
  </script>
  
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "OSIX Tech",
    "url": "https://osix.tech",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://osix.tech/search?q={search_term_string}",
      "query-input": "required name=search_term_string"
    },
    "inLanguage": ["en", "es"]
  }
  </script>
</head>
<body style="background: #000; margin: 0;">
  <noscript>
    <meta http-equiv="refresh" content="0; url=/en/" />
    <p style="color: white; font-family: system-ui; text-align: center; margin-top: 50px;">
      Redirecting to <a href="/en/" style="color: white;">OSIX Tech</a>...
    </p>
  </noscript>
</body>
</html>